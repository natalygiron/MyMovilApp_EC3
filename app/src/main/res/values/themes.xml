<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApp_NatalyGiron" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/onyx</item>
        <item name="colorPrimaryVariant">@color/orange_soda</item>
        <item name="colorOnPrimary">@color/cultured</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/davys_grey</item>
        <item name="colorSecondaryVariant">@color/misty_rose</item>
        <item name="colorOnSecondary">@color/onyx</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.LyricsListApp.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/onyx</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AppTheme.Button_Orange" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/orange_soda</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>